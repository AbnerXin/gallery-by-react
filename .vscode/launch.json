    "version": "0.2.0",
    "configurations": [
        {
            "name": "Js debug",
            "type": "chrome",
            "request": "launch",
            "port": 9222,
            // "file": "${workspaceRoot}/src/index.html",
            "sourceMaps": true,
            "url": "http://localhost:8000/webpack-dev-server/",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "node",
            "program": "${workspaceRoot}/src/index.js"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "附加到进程",
            "address": "localhost",
            "port": 5858
        }
    ]
}